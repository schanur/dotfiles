libgraphviz-dev \
libpcap-dev \
lua5.2
make \
meld \
python3 \
rake \
ruby-method-source \
swig \
valgrind \
zshdb \
"

PACKAGE_LIST_DEV_DOC="\
aspell-doc \
debian-handbook \
doxygen-doc \
erlang-manpages \
giggle \
giggle-personal-details-plugin \
giggle-terminal-view-plugin \
git-doc \
git-man \
glibc-doc \
graphviz-doc \
libvirt-doc \
manpages \
manpages-dev \
mplayer-doc \
ncurses-doc \
openmpi-doc \
"

PACKAGE_LIST_NONFREE="\
firmware-iwlwifi \
firmware-linux \
"

apt-get install ${PACKAGE_LIST_EARLY_1}

git config --global user.email "root@localhost"
git config --global user.name  "root"

apt-get install ${PACKAGE_LIST_EARLY_2}

# eatmydata
apt-get install                        \
        ${PACKAGE_LIST}                \
        ${PACKAGE_LIST_X11}            \
        ${PACKAGE_LIST_DEV}            \
        ${PACKAGE_LIST_DEV_DOC}

apt-get install                        \
        ${PACKAGE_LIST_X11_MULTIMEDIA} \
        ${PACKAGE_LIST_VIRT}

# Check for inclusion:
# logtail
# pavumeter pavucontrol paman paprefs
# gsmartcontrol
# cmdtest
# ssh-askpass rssh molly-guard ufw monkeysphere
# resolvconf dnsmasq


# TODO:
# Reset linux-firmware-free to autoset
